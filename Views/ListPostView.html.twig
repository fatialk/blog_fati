<!doctype html>
<html lang="fr">
	{% include 'head.html.twig' %}
	<body>
		{% include 'header.html.twig' %}
		<div class="container-fluid">
			<main class="tm-main">
				<div class="row tm-row">
					{% for post in posts %}
						<article class="col-12 col-md-6 tm-post">
							<hr class="tm-hr-primary">
							<a href="{{post.id}}" class="effect-lily tm-post-link tm-pt-60">
								<div class="tm-post-link-inner">
									<img class="post-image" src="/public/assets/Upload/Post/{{post.id}}." alt="Image" class="img-fluid">
								</div>
								<h2 class="tm-pt-30 tm-color-primary tm-post-title">{{post.title}}</h2>
							</a>
							<div class="d-flex justify-content-between tm-pt-45">
								<span>{{post.chapo}}</span>
							</div>
							<hr>
							<div class="d-flex justify-content-between">
								<span class="tm-color-primary">{{post.updatedAt}}</span>
								<span>{{post.comments|length}}
									commentaires</span>
							</div>
						</article>
					{% endfor %}
				</div>
			</main>
		</div>
		{% include 'footer.html.twig' %}
	</body>
</html>
